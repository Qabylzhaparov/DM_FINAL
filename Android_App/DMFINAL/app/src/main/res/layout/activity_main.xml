<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Obesity Prediction"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- QUICK BMI PREDICTION Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/primary"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick BMI Assessment"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fast prediction based on height and weight only"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:alpha="0.8"
                        android:layout_marginBottom="16dp" />

                    <!-- Height -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Height (meters, e.g. 1.75)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/white"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/heightInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="@color/white"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Weight -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Weight (kg, e.g. 70)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        app:boxStrokeColor="@color/white"
                        app:hintTextColor="@color/white"
                        android:textColorHint="@color/white">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/weightInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:textColor="@color/white"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Quick Predict Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/quickPredictButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick Check"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:minHeight="56dp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="8dp"
                        android:textColor="@color/primary"
                        style="@style/Widget.MaterialComponents.Button" />

                    <!-- Quick Result -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/quickResultCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:visibility="gone"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Quick Result:"
                                android:textSize="14sp"
                                android:textColor="@color/primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/quickResultText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DIVIDER with "OR" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="8dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  OR GET DETAILED ANALYSIS  "
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:alpha="0.6" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/primary"
                    android:alpha="0.3" />

            </LinearLayout>

            <!-- DETAILED LIFESTYLE Section Header -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailedSectionToggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detailed Lifestyle Prediction"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                    <TextView
                        android:id="@+id/expandIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¼"
                        android:textSize="20sp"
                        android:textColor="@color/primary" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DETAILED SECTION (Collapsible) -->
            <LinearLayout
                android:id="@+id/detailedSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <!-- Personal Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Gender -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Gender"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <AutoCompleteTextView
                            android:id="@+id/genderSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:minHeight="56dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Age -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age (years)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ageInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:minHeight="56dp"
                            android:maxLength="3" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Family &amp; Health Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Family &amp; Health"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Family History -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/familyHistorySwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Family history with overweight (FHOW)"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:thumbTint="@color/primary"
                        app:trackTint="@color/primary_light"
                        android:layout_marginBottom="8dp" />

                    <!-- FAVC -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/favcSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Frequently consume high caloric food (FAVC)"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:thumbTint="@color/primary"
                        app:trackTint="@color/primary_light"
                        android:layout_marginBottom="8dp" />

                    <!-- SMOKE -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/smokeSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Smoke"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:thumbTint="@color/primary"
                        app:trackTint="@color/primary_light"
                        android:layout_marginBottom="8dp" />

                    <!-- SCC -->
                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/sccSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monitor calories consumption (SCC)"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:thumbTint="@color/primary"
                        app:trackTint="@color/primary_light" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Diet &amp; Nutrition Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Diet &amp; Nutrition"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- FCVC -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vegetable consumption (1-3) (FCVC)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fcvcInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- NCP -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Number of main meals per day (NCP)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ncpInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CAEC -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Consumption of food between meals (CAEC)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <AutoCompleteTextView
                            android:id="@+id/caecSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:minHeight="56dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- CALC -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Alcohol consumption (CALC)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <AutoCompleteTextView
                            android:id="@+id/calcSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:minHeight="56dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Lifestyle &amp; Activity Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lifestyle &amp; Activity"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="16dp" />

                    <!-- CH2O -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Water consumption (1-3) (CH2O)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ch2oInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- FAF -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Physical activity (0-3) (FAF)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/fafInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- TUE -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Screen time (0-2) (TUE)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="12dp"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tueInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:minHeight="56dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- MTRANS -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Transportation method"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">
                        <AutoCompleteTextView
                            android:id="@+id/mtransSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"
                            android:minHeight="56dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Detailed Predict Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/detailedPredictButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Detailed Prediction"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:minHeight="64dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/primary"
                app:cornerRadius="12dp"
                app:elevation="6dp"
                style="@style/Widget.MaterialComponents.Button" />

            <!-- Detailed Result Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/detailedResultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/surface"
                app:strokeWidth="2dp"
                app:strokeColor="@color/primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detailed Analysis Result:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailedResultText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <!-- End of Detailed Section -->

            <!-- Progress Bars -->
            <ProgressBar
                android:id="@+id/quickProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="8dp" />

            <ProgressBar
                android:id="@+id/detailedProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
